<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:id="@+id/dlg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/important_btn"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dlg_content"
            android:layout_toLeftOf="@+id/dlg_ok_btn"
            android:layout_alignBottom="@+id/dlg_ok_btn"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dlg_action_ok"
            android:scaleType="centerInside"
            android:background="@null"
            android:id="@+id/dlg_ok_btn"
            android:layout_below="@+id/dlg_content"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"/>
</RelativeLayout>
