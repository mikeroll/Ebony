<resources>

    <!-- Base application theme. -->
    <style name="Ebony" parent="android:Theme.Holo.Light.NoActionBar">
    </style>

    <!-- Main ListView -->
    <style name="Ebony.TodoList">
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Ebony.TodoList.Empty">
        <item name="android:textSize">20pt</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="Ebony.TodoItem">
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="Ebony.TodoItem.ImportantBtn">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:button">@drawable/ic_important</item>
    </style>
    <style name="Ebony.TodoItem.TodoText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="Ebony.TodoItem.Undo">
        <item name="android:layout_height">60dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="Ebony.TodoItem.Undo.UndoBtn">
        <item name="android:background">@drawable/todo_undo_button</item>
    </style>
    <style name="Ebony.TodoItem.Undo.DeleteOk">
        <item name="android:gravity">center</item>
    </style>


    <!-- TodoView -->
    <style name="Ebony.TodoView" parent="android:Theme.Holo.Light.DarkActionBar"/>
    <style name="Ebony.TodoView.Content">
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textSize">9pt</item>
        <item name="android:hint">@string/todo_hint</item>
    </style>
    <style name="Ebony.TodoView.OKButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/dlg_action_ok</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="Ebony.TodoView.Important">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawableLeft">@drawable/ic_important</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/todo_important_color</item>
        <item name="android:textOn">@string/todo_important_yes</item>
        <item name="android:textOff">@string/todo_important_no</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@null</item>
    </style>

</resources>
