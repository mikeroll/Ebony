<resources>

    <!-- Base application theme. -->
    <style name="Ebony" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Ebony.ActionBar</item>
    </style>

    <style name="Ebony.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/grape</item>
        <item name="android:titleTextStyle">@style/Ebony.ActionBar.Title</item>
    </style>

    <!-- Action Bar title -->
    <style name="Ebony.ActionBar.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Main ListView -->
    <style name="Ebony.TodoList" parent="android:Theme.Holo.Light">
        <item name="android:padding">4dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- TodoView -->
    <style name="Ebony.TodoView.Content" parent="android:Theme.Holo.Light">
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textSize">9pt</item>
        <item name="android:hint">@string/todo_hint</item>
    </style>
    <style name="Ebony.TodoView.OKButton" parent="android:Theme.Holo.Light">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/dlg_action_ok</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="Ebony.TodoView.Important" parent="android:Theme.Holo.Light">
       <item name="android:paddingLeft">20dp</item>
       <item name="android:drawableLeft">@drawable/ic_important</item>
       <item name="android:drawablePadding">6dp</item>
       <item name="android:textColor">@color/todo_important_color</item>
       <item name="android:textOn">@string/todo_important_yes</item>
       <item name="android:textOff">@string/todo_important_no</item>
       <item name="android:gravity">left|center_vertical</item>
       <item name="android:background">@null</item>
    </style>


</resources>
